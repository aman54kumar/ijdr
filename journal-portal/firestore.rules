rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Public read access for journals and articles
    match /journals/{journalId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }
    
    match /articles/{articleId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }
    
    // Public read access for board members (so visitors can see the editorial board)
    match /boardMembers/{memberId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }
    
    // Admin users collection (if you want user management)
    match /admins/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Temporary: Allow all authenticated users to read/write everything for debugging
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
} 